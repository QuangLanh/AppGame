<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.PhimAnh.TracNghiemPhimAnh_Easy_Activity"
    android:orientation="vertical"
    android:background="@drawable/bg_activity_tracnghiem_phimanh">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvTitle_phimanh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHIM ẢNH"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/josefinsans_bold"></TextView>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="0dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/phimanh"></com.airbnb.lottie.LottieAnimationView>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="380dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/bg_cauhoi_phimanh"
        android:layout_height="190dp">

        <TextView
            android:layout_width="333dp"
            android:layout_height="148dp"
            android:id="@+id/tv_cauhoi_phimanh"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_medium"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:text="CÂU HỎI ?"
            android:lineSpacingExtra="6dp"></TextView>
    </LinearLayout>
    <TextView
        android:layout_marginTop="0dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/count_question_phim"></TextView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/a"
            android:padding="10dp"
            android:textSize="20sp"
            android:lineSpacingExtra="6dp"
            android:text="ĐÁP ÁN A"
            android:id="@+id/tv_dapanA_phimanh"
            android:background="@drawable/bg_dapan_phimanh"></TextView>

        <TextView
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/b"
            android:padding="10dp"
            android:layout_marginLeft="0dp"
            android:lineSpacingExtra="6dp"
            android:text="ĐÁP ÁN B"
            android:id="@+id/tv_dapanB_phimanh"
            android:background="@drawable/bg_dapan_phimanh"></TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:gravity="center"
            android:drawableLeft="@drawable/c"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:lineSpacingExtra="6dp"
            android:text="ĐÁP ÁN C"
            android:id="@+id/tv_dapanC_phimanh"
            android:background="@drawable/bg_dapan_phimanh"></TextView>

        <TextView
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/d"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="0dp"
            android:lineSpacingExtra="6dp"
            android:text="ĐÁP ÁN D"
            android:id="@+id/tv_dapanD_phimanh"
            android:background="@drawable/bg_dapan_phimanh"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/btnhome_phim_easy"
            android:layout_marginLeft="70dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/homebutton"
            android:layout_width="90dp"
            android:layout_height="90dp"></com.airbnb.lottie.LottieAnimationView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView"
                android:layout_width="200dp"
                android:layout_height="90dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/hienthidiem"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="0dp"></com.airbnb.lottie.LottieAnimationView>

            <TextView
                android:id="@+id/txthienthidiem_phim_easy"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:fontFamily="@font/josefinsans_bold"
                android:gravity="right"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/lottieAnimationView"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"></TextView>

            <TextView
                android:id="@+id/txtdiemcong_phim_easy"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:fontFamily="@font/josefinsans_bold"
                android:gravity="right"
                android:textColor="#33bbff"
                android:textSize="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txthienthidiem_phim_easy"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</LinearLayout>
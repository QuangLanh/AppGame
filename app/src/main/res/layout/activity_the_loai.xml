<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theloai"
    tools:context=".MainScreen.MHCActivity">

    <TextView
        android:textColor="#FF5722"
        android:fontFamily="@font/quantum_profit"
        android:text="Thể Loại"
        android:gravity="center"
        android:textSize="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvtheloai"
        tools:ignore="MissingConstraints">
    </TextView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/tvtheloai"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/cloud"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp"></com.airbnb.lottie.LottieAnimationView>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lottieAnimationView2"
        app:layout_constraintTop_toBottomOf="@+id/tvtheloai"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/cute"
        tools:ignore="MissingConstraints"></com.airbnb.lottie.LottieAnimationView>

    <LinearLayout
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvtheloai">
        <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <Button
                        android:id="@+id/btnTheThao"
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:text="Thể Thao"
                        android:fontFamily="@font/quantum_profit"
                        android:textSize="20dp"
                        android:background="@drawable/button_theloai"
                        android:drawableRight="@drawable/icons8_basketball_64px_5"
                        android:textColor="#c2f0c2"></Button>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btnGame"
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:padding="10dp"
                        android:layout_gravity="center"
                    android:text="Game"
                    android:fontFamily="@font/quantum_profit"
                    android:textSize="20dp"
                    android:background="@drawable/button_theloai"
                    android:drawableRight="@drawable/icons8_video_game_64px_1"
                    android:textColor="#c2f0c2"></Button>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <Button
                    android:id="@+id/btnAmNhac"
                    android:layout_width="180dp"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:text="Âm Nhạc"
                    android:fontFamily="@font/quantum_profit"
                    android:textSize="20dp"
                    android:background="@drawable/button_theloai"
                    android:drawableRight="@drawable/icons8_music_64px"
                    android:textColor="#c2f0c2"></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnPhim"
                    android:layout_width="180dp"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:text="Phim"
                    android:fontFamily="@font/quantum_profit"
                    android:textSize="20dp"
                    android:background="@drawable/button_theloai"
                    android:drawableRight="@drawable/icons8_movies_folder_64px"
                    android:textColor="#c2f0c2"></Button>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <Button
                    android:id="@+id/btnDoMeo"
                    android:layout_width="180dp"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:text="Đố Mẹo"
                    android:fontFamily="@font/quantum_profit"
                    android:textSize="20dp"
                    android:background="@drawable/button_theloai"
                    android:drawableRight="@drawable/domeo"
                    android:textColor="#c2f0c2"></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnDiaLy"
                    android:layout_width="180dp"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:text="Địa Lý"
                    android:fontFamily="@font/quantum_profit"
                    android:textSize="20dp"
                    android:background="@drawable/button_theloai"
                    android:drawableRight="@drawable/icons8_geography_64px"
                    android:textColor="#c2f0c2"></Button>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/grass"
        tools:ignore="MissingConstraints"></com.airbnb.lottie.LottieAnimationView>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/grass"
        tools:ignore="MissingConstraints"></com.airbnb.lottie.LottieAnimationView>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_margin="0dp"
    android:background="@drawable/bg_dialog_setting"
    android:padding="20dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="40dp"
        android:src="@drawable/close"
        android:layout_height="40dp"
        tools:ignore="MissingConstraints"></ImageView>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="60dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/dog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_close"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"></com.airbnb.lottie.LottieAnimationView>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_close"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/loa"
                android:layout_width="40dp"
                android:layout_height="40dp"></ImageView>
            <SeekBar
                android:id="@+id/seekbar_volume"
                android:progress="100"
                android:progressTint="#996600"
                android:thumb="@drawable/bear"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30dp"></SeekBar>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/light"
                android:layout_width="40dp"
                android:layout_height="40dp"></ImageView>
            <SeekBar
                android:progress="100"
                android:progressTint="#996600"
                android:thumb="@drawable/cat"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30dp"></SeekBar>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>